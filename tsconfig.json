{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["src/@types", "node_modules/@types"],
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
